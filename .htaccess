RewriteEngine On

# 重定向规则：将 /knowledge/文章名.html?lang=语言 重定向到 /语言/knowledge/文章名.html
RewriteCond %{QUERY_STRING} ^lang=([a-z]{2})$
RewriteRule ^knowledge/(.+)\.html$ /%1/knowledge/$1.html? [R=301,L]

